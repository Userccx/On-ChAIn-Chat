								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set(\"nonce\", response.nonce);",
									"    pm.environment.set(\"auth_message\", response.message);",
									"}"
								],
								"type": "text/javascript"
